<UserControl x:Class="Klinika.View.Miesiac"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Klinika.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="1"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="1"/>
            <EventSetter Event="Click" Handler="Button_Click"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0"
                   Text="Poniedziałek"/>
        <TextBlock Grid.Column="1" Grid.Row="0"
                   Text="Wtorek"/>
        <TextBlock Grid.Column="2" Grid.Row="0"
                   Text="Środa"/>
        <TextBlock Grid.Column="3" Grid.Row="0"
                   Text="Czwartek"/>
        <TextBlock Grid.Column="4" Grid.Row="0"
                   Text="Piątek"/>
        <TextBlock Grid.Column="5" Grid.Row="0"
                   Text="Sobota"/>
        <TextBlock Grid.Column="6" Grid.Row="0"
                   Text="Niedziela"/>

        <Button Grid.Column="0" Grid.Row="1"
                Content="{Binding DzienMiesiaca[0][0],
                     RelativeSource={RelativeSource 
                     Mode=FindAncestor,
                     AncestorType={x:Type UserControl}}}"
                Visibility="{Binding Widoczny[0],
                     RelativeSource={RelativeSource 
                     Mode=FindAncestor,
                     AncestorType={x:Type UserControl}}}"/>
        <Button Grid.Column="1" Grid.Row="1" 
